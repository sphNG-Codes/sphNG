      INTEGER idim, idim2, iptdim, iptneigh, nlmax
      INTEGER mmax, iradtrans, imhd, imhdxsph, isizealphaMM
      REAL tiny

      PARAMETER (idim=7501000)
c#ifdef MPI
      PARAMETER (idim2 = 2*idim)
c#else
c      PARAMETER (idim2 = idim)
c#endif
      PARAMETER (iptdim=1000)
      PARAMETER (iptneigh=10000)
      PARAMETER (tiny=1.0E-20)
      PARAMETER (mmax=2*idim + 2)

c--Flag for using grad-h version of code is nlmax=1
c      PARAMETER (nlmax = 90)
      PARAMETER (nlmax = 1)

      PARAMETER (iradtrans=idim)
c      PARAMETER (iradtrans=1)

c      PARAMETER (imhd=idim)
      PARAMETER (imhd=1)

c      PARAMETER (imhdxsph=idim)
      PARAMETER (imhdxsph=imhd)

      PARAMETER (isizealphaMM=imhd/idim+1)
