echo '	cd ${CODEDIR}; make clean'
echo '#'
echo '# the following are for rebuilding splash'
echo '#'
echo 'SPLASHDIR=~/splash'
echo
echo 'plot:'
echo '	cd ${SPLASHDIR}; make sphNG'
echo 'plotc:'
echo '	cd ${SPLASHDIR}; make clean'
