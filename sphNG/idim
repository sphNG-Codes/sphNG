      INTEGER idim, idim2, idim3, iptdim, iptneigh, nlmax
      INTEGER mmax, mmax2, iradtrans, iradtrans2
      INTEGER imhd, imhd2, imhd3, imhdxsph, isizealphaMM
      INTEGER idim_h2, idim_h2_2
      REAL tiny

      PARAMETER (idim=1201000)

      PARAMETER (iptdim=1000)
      PARAMETER (iptneigh=10000)
      PARAMETER (tiny=1.0E-20)
c
c--Flag for using grad-h version of code is nlmax=1
c      PARAMETER (nlmax = 90)
      PARAMETER (nlmax = 1)
c
c--For radiative transfer need to use iradtrans = idim
c
c      PARAMETER (iradtrans = idim)
      PARAMETER (iradtrans = 1)
c
c--For MHD need to use imhd = idim
c
c      PARAMETER (imhd = idim)
      PARAMETER (imhd = 1)
c
c--For chemistry need to use idim_h2 = idim
c
c      PARAMETER (idim_h2 = idim)
      PARAMETER (idim_h2 = 1)
c
c--Parameters derived from those defined above.
c     NOTE:  If you are running a non-MPI calculation and you are short
c     of memory you should set idim2 = idim and idim3 = idim and
c     mmax2 = mmax
c
      PARAMETER (idim2 = idim*2)
      PARAMETER (idim3 = idim*3)
c      PARAMETER (idim2 = idim)
c      PARAMETER (idim3 = idim)

      PARAMETER (mmax=2*idim + 2)
      PARAMETER (mmax2=mmax + idim)
c      PARAMETER (mmax2=mmax)

      PARAMETER (imhdxsph=imhd)

      PARAMETER (isizealphaMM=imhd/idim+1)

      PARAMETER (imhd2 = imhd*2)
      PARAMETER (imhd3 = imhd*3)
      PARAMETER (iradtrans2 = iradtrans*2)
      PARAMETER (idim_h2_2 = idim_h2*2)
