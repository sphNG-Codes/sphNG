#
echo '#'
echo '#--Makefile to remake the executable and copy to this directory'
echo '#  Generated by '$0':' `date`
echo '#'
echo 'CODEDIR='${0/utils\/writemake.tcsh/};
echo
echo 'default: gradhrk'
echo
echo 'gradhrkrt:'
echo '	cd ${CODEDIR}; make gradhrkrt; cd -; cp  ${CODEDIR}/sph_tree_rk_gradh_RT .'
